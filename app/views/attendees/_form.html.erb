<%= form_for @attendee, remote: true do |form| %>
  <div class="form-group">
    <% if @attendees.present? %>
      <p>Last 10 registered attendees:</p>
      <ul class="list-unstyled">
        <% @attendees.each do |attendee| %>
          <li><%= attendee.name %></li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-muted">No attendees</p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.text_field :name, class: "form-control #{'is-invalid' if form.object.errors.present?}", placeholder: "Attendee name", autofocus: "" %>
    <div class="invalid-feedback">
      <%= form.object.errors.full_messages.join(", ") %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit "Add", class: "btn btn-success btn-block" %>
  </div>
<% end %>
