<!DOCTYPE html>
<html>
  <head>
    <title>
      <%= [yield(:title), "Rails Wayâ„¢"].map(&:presence).compact.join(" - ") %>
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <%= content_tag "body", data: {controller: "navigation", turbolinks: @turbolinks} do %>
    <div class="h-100 d-flex flex-column justify-content-center">
      <div class="d-flex justify-content-center m-5 align-items-center">
        <h2><%= yield :title %></h2>
      </div>

      <div class="m-auto">
        <%= yield %>
      </div>

      <div class="d-flex justify-content-between m-3 align-items-center">
        <%= link_to_previous %>
        <small class="text-muted"><%= slides.index(@slide) + 1 %>/<%= slides.size %></small>
        <%= link_to_next %>
      </div>
    </div>
  <% end %>
</html>
